<%= simple_form_for(@course, html: { class: 'form-vertical' }) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :teacher %><br>
    <%= f.select :teacher_id, Teacher.all.map {|t| [ t.name, t.id ]}, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :teacher_id, Teacher.find_by(:name).map {|t| [ t.category, t.id ]}, class: "form-control"  %>

  </div>
  <div class="form-group">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sessions %><br>
    <%= f.number_field :sessions, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br>
    <%= f.text_field :start_at, class: "date" %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br>
    <%= f.text_field :end_at, class: "date" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
